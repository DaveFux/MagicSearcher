<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewAboutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutUs"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAboutTitle"
        android:layout_marginTop="10dp"
        android:text="@string/AboutMainText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewAboutAutores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAbout"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="@string/AboutAutores"/>
</RelativeLayout>